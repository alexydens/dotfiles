syntax on
set number
set relativenumber
set hlsearch
set colorcolumn=80
set noswapfile
set tabstop=2
set softtabstop=2
set shiftwidth=2
set expandtab
set clipboard="unnamedplus"
set noswapfile
set mouse=""

tnoremap <ESC> <C-\><C-n>
nnoremap <C-n> <C-w>w
nnoremap <C-n> <C-w>w
nnoremap <C-l> <C-w><
nnoremap <C-h> <C-w>>
nnoremap <C-k> <C-w>+
nnoremap <C-j> <C-w>-
nnoremap <C-o>t <CMD>tabnew<CR>
nnoremap <C-Left> <CMD>tabprev<CR>
nnoremap <C-Right> <CMD>tabnext<CR>
